/*
 * Import nib
 */
@import 'nib'

/*
 * Grab a custom font from Google
 */
@import url('http://fonts.googleapis.com/css?family=Quicksand')

/*
 * Nib provides a CSS reset
 */
global-reset()

/*
 * Store the main color and
 * background color as variables
 */
main-color = #fa5b4d
background-color = #fff

body
  padding-top 20px
  padding-bottom 40px

.container-narrow
  margin 0 auto
  max-width 700px
  & > hr
    margin 30px 0

.jumbotron
  margin 60px 0
  text-align center
  h1
    font-size 72px
    line-height 1
  .btn
    position relative
    font-size 21px
    padding 14px 24px
    top: 0px
    vertical-align top !important
  .userText
    position relative
    font-size 21px
    min-width: 300px
    padding 17px 24px
    margin-right 10px
    top: 0px
    text-align center


.marketing
  margin 60px 0
  p
    & + h4
      margin-top 28px
  li
    list-style-type disc
  .span6
    text-align left
p
  line-height 1.8

.footer
  max-width 500px
  margin 50px auto
  border-top 1px dotted #ccc
  padding-top 5px
  font-size 13px
  text-align center